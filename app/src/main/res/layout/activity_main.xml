<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<EditText
		android:layout_width="match_parent"
		android:inputType="textMultiLine"
		android:layout_height="wrap_content"
		android:hint="github repository link..."
		android:id="@+id/repo_link_edittext"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/output_actions_layout">

		<CheckBox
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="line wrap"
			android:id="@+id/is_linewrap_checkbox"
			android:gravity="center_vertical"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="EDIT README.MD"
			android:id="@+id/edit_button"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_weight="1.0"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="ADD DAILY QUOTE"
			android:id="@+id/daily_quote_button"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_weight="1.0"/>

	</LinearLayout>

	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:inputType="textMultiLine"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:typeface="monospace"
		android:padding="8dp"
		android:background="#0E000000"
		android:id="@+id/command_output_edittext"
		android:minHeight="16dp"
		android:layout_weight="3"
		android:hint="click to fetch README.md"/>

	<Button
		android:layout_width="match_parent"
		style="?android:attr/buttonBarButtonStyle"
		android:layout_height="wrap_content"
		android:text="EXIT"
		android:id="@+id/exit_button"/>

</LinearLayout>

